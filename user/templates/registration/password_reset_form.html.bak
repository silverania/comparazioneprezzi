{% extends 'admin/base_site.html' %}
{% load static %}
<!DOCTYPE html>
<html lang="it" id="page">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8" />
    <meta name="author" content="silverania" />
    <title>Host-WebTalk Modifica Dati</title>
    <link rel="icon" type="image/x-icon" href="/static/images/favicon.ico" />
    <link rel="stylesheet" href="/static/css/reset.css" />
    <link rel="stylesheet" href="/static/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/static/css/all.min.css" />
    <link rel="stylesheet" href="/static/css/register.css" />

    <script src="/static/js/jquery.min.js"></script>
    <script src="/static/node_modules/popper.js/dist/umd/popper.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/all.min.js"></script>
  </head>
  <body id="body" onscroll="var h=document.body.scrollHeight;getPosition();">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 text-center my-5">
          <h1>Hai Dimenticato La Password ?</h1>
          <p>Inserisci la tua e-mail per recuperarla</p>
          <form method="post">
            {% for field in form %}
              {{ field.errors }}
              {{ field.label_tag }} {{ field }}
            {% endfor %}
            <p>
              <input class="input_ok" type="submit" value="invia mail" />
            </p>
            {% csrf_token %}
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
