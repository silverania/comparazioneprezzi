    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: collegare tramite ID processo",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": true
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Avvia Chrome con localhost",
            "url": "https://127.0.0.1:8000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}